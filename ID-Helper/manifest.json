{
  "manifest_version": 2,

  "name": "ID Helper",
  "description": "This is a tool to convert a display name to a valid ID, or convert an ID to a display name.",
  "version": "1.0",

  "permissions": [
    "*://*/*", "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/content_script.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  }
}